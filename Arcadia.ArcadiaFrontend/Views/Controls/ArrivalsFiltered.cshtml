@model IndexViewModel
<div class="container-fluid">
    <div class="form-horizontal">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tr>
                    @*departure airport, callsign, departure airport distance*@
                    <th>Departure Airport</th>
                    <th>CallSign</th>
                    <th>Departure Airport Distance</th>
                </tr>
                @foreach (var item in Model.Arrivals)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstDepartureAirport)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Callsign)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstDepartureAirportHorizDistance)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>